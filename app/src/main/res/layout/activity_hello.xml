<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeddd"
    tools:context=".hello">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/ic_person_name"
                android:hint="Name..."
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#4286f4"
                android:singleLine="true"
                android:paddingLeft="7dp"
                android:imeOptions="actionNext"
                app:met_baseColor="#6d6e70"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="#000714"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:imeOptions="actionNext"
                app:met_floatingLabel="highlight"
                android:hint="Email.."
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/ic_email"
                android:paddingLeft="7dp"
                android:textAllCaps="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#ffff"
                android:inputType="textEmailAddress"
                android:id="@+id/email"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:hint="Mobile..."
                android:imeOptions="actionNext"
                app:met_floatingLabel="highlight"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/ic_smartphone"
                android:paddingLeft="7dp"
                android:textAllCaps="false"
                android:maxLines="1"
                android:singleLine="true"
                android:digits="0123456789"
                android:textColorHint="#ffff"
                android:inputType="number"
                android:maxLength="13"
                android:id="@+id/mob"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:hint="Address..."
                android:imeOptions="actionNext"
                app:met_floatingLabel="highlight"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/ic_home_black"
                android:paddingLeft="7dp"
                android:textAllCaps="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#ffff"
                android:inputType="text"
                android:id="@+id/address"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATE:"
                    android:fontFamily="@font/abril_fatface"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000"
                    android:textSize="15dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/statespinner"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CITY:"
                    android:fontFamily="@font/abril_fatface"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/cityspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GENDER:"
                    android:fontFamily="@font/abril_fatface"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:textColor="#000" />
                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="#000"
                        android:checked="false"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/male"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/female"/>>
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLOOD GROUP:"
                    android:fontFamily="@font/abril_fatface"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:textColor="#000" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/spinner"
                    android:spinnerMode="dropdown">
                </Spinner>
            </LinearLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am a Donor"
                android:textSize="15dp"
                android:id="@+id/check"
                android:checked="false"
                android:textColor="#000"
                android:fontFamily="@font/abril_fatface"
                android:layout_marginRight="13dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button1"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/abril_fatface"
                android:shadowColor="#000"
                android:text="SIGNUP"
                android:textAlignment="center"
                android:textColor="#FFFF" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

